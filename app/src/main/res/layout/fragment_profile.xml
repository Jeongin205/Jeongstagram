<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/bottom_sheet_menu_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_setting_menu"
            android:background="@color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:id="@+id/write_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_write"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_menu_button"
            app:layout_constraintRight_toLeftOf="@id/bottom_sheet_menu_button"
            app:layout_constraintTop_toTopOf="@id/bottom_sheet_menu_button"
            android:layout_marginRight="30dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_menu_button"/>
        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_imageview"
            app:layout_constraintLeft_toLeftOf="@id/profile_imageview"/>
        <TextView
            android:id="@+id/introduce_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_textview"
            app:layout_constraintLeft_toLeftOf="@id/profile_imageview"/>
        <Button
            android:id="@+id/profile_edit_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="프로필 편집"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/line_2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/introduce_textview"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9F9F9F"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>