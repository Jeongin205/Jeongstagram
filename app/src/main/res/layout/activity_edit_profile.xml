<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity">
    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textSize="22sp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toRightOf="@id/cancel_button"
        app:layout_constraintTop_toTopOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"/>
    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:background="@color/transparent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"
        app:layout_constraintRight_toRightOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageview"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel_button"
        app:layout_constraintBottom_toTopOf="@id/name_edittext"/>
    <TextView
        android:id="@+id/profile_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 변경"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_imageview"/>
    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        app:layout_constraintLeft_toLeftOf="@id/name_edittext"
        app:layout_constraintBottom_toTopOf="@id/name_edittext"/>
    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/profile_imageview"
        app:layout_constraintBottom_toTopOf="@id/introduce_edittext"/>
    <TextView
        android:id="@+id/name_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/name_edittext"
        app:layout_constraintLeft_toLeftOf="@id/name_edittext"/>
    <TextView
        android:id="@+id/introduce_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        app:layout_constraintLeft_toLeftOf="@id/introduce_edittext"
        app:layout_constraintBottom_toTopOf="@id/introduce_edittext"/>
    <EditText
        android:id="@+id/introduce_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/name_edittext"
        app:layout_constraintBottom_toTopOf="@id/user_setting"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9F9F9F"
        app:layout_constraintBottom_toTopOf="@id/user_setting"/>
    <TextView
        android:id="@+id/user_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="개인정보 설정"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:paddingStart="15dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/introduce_edittext"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9F9F9F"
        app:layout_constraintTop_toBottomOf="@id/user_setting"/>


</androidx.constraintlayout.widget.ConstraintLayout>