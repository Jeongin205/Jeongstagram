<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_user_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/post_user_imageview"
        app:layout_constraintBottom_toTopOf="@id/post_location"
        app:layout_constraintLeft_toRightOf="@id/post_user_imageview"/>
    <TextView
        android:id="@+id/post_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        app:layout_constraintLeft_toLeftOf="@id/post_name"
        app:layout_constraintTop_toBottomOf="@id/post_name"
        app:layout_constraintBottom_toBottomOf="@id/post_user_imageview"/>
    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/post_user_imageview"/>
    <ImageButton
        android:id="@+id/heart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart"
        android:background="@color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:id="@+id/comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        android:background="@color/transparent"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/heart_button"
        app:layout_constraintTop_toTopOf="@id/heart_button"/>
    <TextView
        android:id="@+id/heart_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 10개"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/heart_button"
        app:layout_constraintLeft_toLeftOf="@id/heart_button"/>
    <TextView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/heart_textview"/>

</androidx.constraintlayout.widget.ConstraintLayout>